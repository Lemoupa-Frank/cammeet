<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Events.Edit_Activity">

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="42dp"
            app:tint="@color/black_white"
            android:layout_height="42dp"
            android:background="@drawable/ic_baseline_clear_24"
            android:contentDescription="@string/clear_image_view"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="230dp"
            app:tint="@color/black_white"
            android:background="@drawable/ic_baseline_edit_24"
            android:contentDescription="@string/edit_image_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Linear"
        app:layout_constraintVertical_bias="0.036">

        <TextView
            android:id="@+id/Summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black_white"
            android:gravity="center"
            android:textSize="24sp" />
            <TextView
                android:id="@+id/location"
                android:layout_marginTop="13dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/ic_baseline_location_on_24" />
            <TextView
                android:id="@+id/Owner"
                android:layout_marginTop="13dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableLeftCompat="@drawable/ic_baseline_admin_panel_settings_24"
                android:textSize="18sp" />
        <TextView
            android:id="@+id/participants"
            android:layout_marginTop="13dp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:drawableLeftCompat="@drawable/ic_baseline_location_on_24" />
        <TextView
            android:id="@+id/Description"
            android:layout_marginTop="13dp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableLeftCompat="@drawable/ic_baseline_admin_panel_settings_24"
            android:textSize="18sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>